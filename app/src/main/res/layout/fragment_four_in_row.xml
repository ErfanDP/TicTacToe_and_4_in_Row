                                android:layout_margin="4dp"
                                android:background="@color/baseBackgroundButton" />

                            <Button
                                android:id="@+id/button_5_4"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="4dp"
                                android:background="@color/baseBackgroundButton" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/vertical_6X6_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/button_0_5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_margin="4dp"
                            android:background="@color/baseBackgroundButton" />

                        <Button
                            android:id="@+id/button_1_5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_margin="4dp"
                            android:background="@color/baseBackgroundButton" />

                        <Button
                            android:id="@+id/button_2_5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_margin="4dp"
                            android:background="@color/baseBackgroundButton" />

                        <Button
                            android:id="@+id/button_3_5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_margin="4dp"
                            android:background="@color/baseBackgroundButton" />

                        <Button
                            android:id="@+id/button_4_5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_margin="4dp"
                            android:background="@color/baseBackgroundButton" />

                        <Button
                            android:id="@+id/button_5_5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_margin="4dp"
                            android:background="@color/baseBackgroundButton" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/horizontal_7X7_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button_6_0"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="4dp"
                        android:background="@color/baseBackgroundButton" />

                    <Button
                        android:id="@+id/button_6_1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="4dp"
                        android:background="@color/baseBackgroundButton" />

                    <Button
                        android:id="@+id/button_6_2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
