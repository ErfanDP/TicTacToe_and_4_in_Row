<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.fragment.FourInRowFragment">

    <LinearLayout
        android:id="@+id/game_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F44336"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/player1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="#C31B0E"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_player_one_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        tools:text="player1" />

                    <TextView
                        android:id="@+id/text_player_one_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        tools:text="10" />

                    <View
                        android:id="@+id/player1_turn"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#4CAF50"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/player2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="#3F51B5"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_player_two_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        tools:text="player1" />

                    <TextView
                        android:id="@+id/text_player_two_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        tools:text="10" />

                    <View
                        android:id="@+id/player2_turn"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#4CAF50"
                        android:visibility="invisible"
                        tools:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tic_tac_toe_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="32dp"
                android:background="#00BCD4"
                android:text="@string/tic_tac_toe" />

            <Button
                android:id="@+id/button_settting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="#9371CF"
                android:text="@string/setting" />

            <Button
                android:id="@+id/four_in_row_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:background="#FFC107"
                android:text="@string/_4_in_a_row" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/game_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00BCD4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_tic_tac_toe_0_0"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:background="#CCCCCC"
                    android:textSize="64sp"
                    tools:text="X" />

                <Button
                    android:id="@+id/button_tic_tac_toe_0_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:background="#CCCCCC"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/button_tic_tac_toe_0_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:background="#CCCCCC"
                    android:textSize="64sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_tic_tac_toe_1_0"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:background="#CCCCCC"
                    android:textSize="64sp"
                    tools:text="O" />

                <Button
                    android:id="@+id/button_tic_tac_toe_1_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:background="#CCCCCC"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/button_tic_tac_toe_1_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:background="#CCCCCC"
                    android:textSize="64sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_tic_tac_toe_2_0"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:background="#CCCCCC"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/button_tic_tac_toe_2_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:background="#CCCCCC"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/button_tic_tac_toe_2_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:background="#CCCCCC"
                    android:textSize="64sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

